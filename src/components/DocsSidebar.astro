---
export interface Props {
  currentPage?: string;
}

const { currentPage = '' } = Astro.props;

const navigationGroups = [
  {
    title: 'Getting Started',
    items: [
      { title: 'Introduction', href: '/docs' },
      { title: 'Installation', href: '/docs/installation' },
      { title: 'Quick Start', href: '/docs/quick-start' },
      { title: 'Configuration', href: '/docs/configuration' }
    ]
  },
  {
    title: 'Core Concepts',
    items: [
      { title: 'Routing', href: '/docs/routing' },
      { title: 'Middleware', href: '/docs/middleware' },
      { title: 'Controllers', href: '/docs/controllers' },
      { title: 'Models', href: '/docs/models' },
      { title: 'Database Access', href: '/docs/database' }
    ]
  },
  {
    title: 'Advanced',
    items: [
      { title: 'Authentication', href: '/docs/authentication' },
      { title: 'Authorization', href: '/docs/authorization' },
      { title: 'Validation', href: '/docs/validation' },
      { title: 'Error Handling', href: '/docs/error-handling' },
      { title: 'Testing', href: '/docs/testing' }
    ]
  },
  {
    title: 'Deployment',
    items: [
      { title: 'Production Checklist', href: '/docs/production-checklist' },
      { title: 'Deployment Options', href: '/docs/deployment' },
      { title: 'Scaling', href: '/docs/scaling' },
      { title: 'Monitoring', href: '/docs/monitoring' }
    ]
  }
];

function isActive(href: string): boolean {
  return currentPage === href;
}
---

<div class="sidebar">
  <div class="pr-4">
    <div class="text-sm mb-6">
      <div class="flex items-center space-x-2 mb-2">
        <span class="font-medium text-neutral-900 dark:text-white">Documentation</span>
        <span class="text-xs py-0.5 px-2 rounded-full bg-primary-100 text-primary-800 dark:bg-primary-900 dark:text-primary-300">v0.1.0</span>
      </div>
      <div class="text-neutral-600 dark:text-neutral-400">
        Learn how to use FrameAPI to build modern backend applications.
      </div>
    </div>
    
    <nav class="space-y-6">
      {navigationGroups.map(group => (
        <div class="doc-nav-group">
          <h3 class="doc-nav-group-title">{group.title}</h3>
          <ul class="space-y-1">
            {group.items.map(item => (
              <li>
                <a
                  href={item.href}
                  class={`doc-nav-link ${isActive(item.href) ? 'doc-nav-link-active' : ''}`}
                >
                  {item.title}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </nav>
  </div>
</div>